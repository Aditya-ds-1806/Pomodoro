<div class="card border-0 outline-2 <% if(todos) { %>h-100<% } %>">
    <div class="card-body d-flex align-items-center justify-content-between py-2">
        <div class="d-flex align-items-center">
            <div class="me-3" style="color: #8BD1FF;">
                <i data-feather="circle" width="3rem" height="3rem" class="ms-1" fill="#8BD1FF" stroke-width="2"></i>
            </div>
            <div class="align-self-end">
                <h1 class="fs-5 fw-bold mb-0"><%= topic %></h1>
                <div class="text-light">
                    <% for(let i=0; i < 5; i++) { %>
                        <i data-feather="circle" width="1rem" height="1rem" class="text-center" fill="#D1D1D1"
                            stroke-width="2"></i>
                        <% } %>
                </div>
            </div>
        </div>
        <% if(!todos) { %>
        <div class="text-secondary" style="min-width: fit-content;" data-topic="<%= topic %>" data-chapter="<%= chapter %>">
            <i data-feather="clock" width="1.25rem" height="1.25rem" class="text-center" stroke-width="2" role="button"></i>
            <i data-feather="check" width="1.25rem" height="1.25rem" class="text-center ms-4" stroke-width="2" role="button"></i>
            <i data-feather="minus" width="1.25rem" height="1.25rem" class="text-center ms-4" stroke-width="2" role="button"></i>
        </div>
        <% } else { %>
        <div class="text-secondary ps-2" style="min-width: fit-content;" data-topic="<%= topic %>" data-chapter="<%= chapter %>">
            <i data-feather="clock" width="1.25rem" height="1.25rem" class="text-center" stroke-width="2" role="button"></i>
            <i data-feather="plus" width="1.25rem" height="1.25rem" class="text-center ms-4" stroke-width="2" role="button"></i>
            <i data-feather="check" width="1.25rem" height="1.25rem" class="text-center ms-4" stroke-width="2" role="button"></i>
        </div>
        <% } %>
    </div>
</div>
