<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard | <%= course %></title>
    <link rel="stylesheet" href="/dist/subjects.css">
</head>

<body>
    <%- include('partials/navbar', {subjects: true, avatar}) %>
        <main class="container mt-5">
            <header class="mb-4">
                <h1 class="fs-3 text-center text-capitalize"><%= course %></h1>
            </header>
            <main>
                <div class="row container pe-5 mb-5">
                    <div class="col-4 px-4">
                        <%- include('partials/subject', {course}) %>
                    </div>
                    <div class="col-8 bg-white outline-2 px-3 pt-4">
                        <h1 class="fs-4 ms-4 mb-4">Average Mark Distribution (2016-2020)</h1>
                        <canvas id="distribution" width="400" height="80" class="img-fluid bg-white"></canvas>
                    </div>
                </div>
                <% syllabus.forEach(section=> { %>
                <div class="row container px-5 mb-5">
                    <%- include('partials/todos', {section}) %>
                </div>
                <% }) %>
            </main>
        </main>
        <script src="/dist/subjects.js"></script>
</body>

</html>
